<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectFinance_1.Landing">
  <ContentPage.Content>
    <StackLayout>
      <StackLayout.Children>
        <Label Text="Logo" VerticalOptions="Start" />
        <StackLayout VerticalOptions="CenterAndExpand">
          <StackLayout.Children>
            <Button x:Name="btnConnexion" Text="Connexion" Clicked="OnButtonConnexionClicked"></Button>
            <Button x:Name="btnInscription" Text="Inscription" Clicked="OnButtonInscriptionClicked"></Button>
          </StackLayout.Children>
        </StackLayout>
      </StackLayout.Children>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
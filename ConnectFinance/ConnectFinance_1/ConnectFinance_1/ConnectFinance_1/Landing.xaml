<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectFinance_1.Landing">
  <ContentPage.Content>
    <Grid BackgroundColor="#3399E7">
      <StackLayout>
        <StackLayout.Children>
          <Label Text="Logo" VerticalOptions="Start"/>
          <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <StackLayout.Children> 
              <Button x:Name="btnConnexion" Text="Connexion" Clicked="OnButtonConnexionClicked" BackgroundColor="#E1E6FA" TextColor="Black"></Button>
              <Button x:Name="btnInscription" Text="Inscription" Clicked="OnButtonInscriptionClicked" BackgroundColor="#E1E6FA" TextColor="Black"></Button>
            </StackLayout.Children>
          </StackLayout>
        </StackLayout.Children>
      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>

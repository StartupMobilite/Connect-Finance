<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectFinance_1.Connexion">
	<ContentPage.Content>
		<StackLayout  HorizontalOptions="CenterAndExpand" HeightRequest="45">
			<StackLayout.Children>
				<Label Text="Logo" VerticalOptions="Start"/>
				<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
					<StackLayout.Children>
            <Label Text="" x:Name="Error" TextColor="Red" />
						<Entry x:Name="adresse_mail" Placeholder="Adresse mail"/>
						<Entry x:Name="password" IsPassword="True" Placeholder="Mot de passe"/>
						<Button x:Name="validerBtn" Text="Valider" Clicked="ValiderBtn_OnClicked"/>
					</StackLayout.Children>
				</StackLayout>
        <StackLayout Orientation="Horizontal">
          <StackLayout.Children>
            <Button x:Name="btnFb" Clicked="BtnFb_OnClicked" Image="Facebook.png" BackgroundColor="Transparent" />
            <Button x:Name="btnLnkd" Clicked="BtnLnkd_OnClicked" Image="Linkedin.png" BackgroundColor="Transparent" />
            <Button x:Name="btnGP" Clicked="BtnGP_OnClicked" Image="GooglePlus.png" BackgroundColor="Transparent" />
          </StackLayout.Children>
        </StackLayout>
			</StackLayout.Children>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
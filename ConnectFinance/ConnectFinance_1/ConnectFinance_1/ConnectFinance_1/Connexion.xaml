<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectFinance_1.Connexion">
	<ContentPage.Content>
		<StackLayout  HorizontalOptions="CenterAndExpand" HeightRequest="45" WidthRequest="60">
			<StackLayout.Children>
				<Label Text="Logo" VerticalOptions="Start"/>
				<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
					<StackLayout.Children>
						<Entry x:Name="adresse_mail" Placeholder="Adresse mail"/>
						<Entry x:Name="password" Placeholder="Mot de passe"/>
						<Button x:Name="validerBtn" Text="Valider" Clicked="ValiderBtn_OnClicked"/>
					</StackLayout.Children>
				</StackLayout>
				<Button x:Name="btnFb" Clicked="BtnFb_OnClicked" Image="Facebook.png" />
				<Button x:Name="btnLnkd" Text="LinkedIn" Clicked="BtnLnkd_OnClicked"/>
				<Button x:Name="btnGP" Text="Google" Clicked="BtnGP_OnClicked"/>
			</StackLayout.Children>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>